<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background_login">
<ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="TITLE" />

            <EditText
                android:id="@+id/title_text_editreport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Enter a title"
                android:inputType="textMultiLine" />

            <TextView
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="PHOTO" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/image_editreport"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@android:color/darker_gray"
                    android:cropToPadding="true" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" >

                    <Button
                        android:id="@+id/attachphotoButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="Attach Photo" />
                </RelativeLayout>
            </LinearLayout>

            <TextView
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="DETAILS" />

            <EditText
                android:id="@+id/reportEditText_editreport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:ems="10"
                android:hint="Enter report content" />
            
            <TextView
        		android:id="@+id/textView_creator"
        		android:layout_width="109dp"
        		android:layout_height="wrap_content"
        		android:layout_weight="0.21"
        		android:text="CreatorID:"
        		android:textAppearance="?android:attr/textAppearanceLarge" />
			<TextView
            	android:id="@+id/textView_creatorID"
            	android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/textView_creator"
                android:ems="10"/>
			<TextView
       		 	android:id="@+id/textView_time"
        		android:layout_width="109dp"
        		android:layout_height="wrap_content"
        		android:layout_weight="0.21"
        		android:text="Create Time:"
        		android:textAppearance="?android:attr/textAppearanceLarge" />
			 <TextView
            	android:id="@+id/textView_createTime"
            	android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_toRightOf="@+id/textView_time"
                android:ems="10"/>
			 
            <TextView
                android:id="@+id/textView2"
                style="?android:listSeparatorTextViewStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Command Options" />

            <Button
                android:id="@+id/saveButton_reportedit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="10dp"
                android:layout_alignRight="@+id/bindLocationButton"
                android:text="Save" />
            
            <Button
            android:id="@+id/BindQR"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bindLocationButton"
            android:layout_alignBottom="@+id/bindLocationButton"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bindLocationButton"
            android:background="@drawable/blue_button"
            android:text="Bind QR" />

        <Button
            android:id="@+id/DeleteButton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/BindQR"
            android:layout_alignParentTop="true"
            android:background="@drawable/blue_button"
            android:text="Delete Report" />

        <Button
            android:id="@+id/Button_follow"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/saveReportButton"
            android:background="@drawable/blue_button"
            android:text="Follow the Creator" />

        <Button
            android:id="@+id/bindLocationButton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/Button_follow"
            android:background="@drawable/blue_button"
            android:text="Bind Location" />
        </LinearLayout>
    </ScrollView>
 
</LinearLayout>