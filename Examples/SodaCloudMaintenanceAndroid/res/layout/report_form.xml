<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/background_login">

    <EditText
        android:id="@+id/reportEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.69"
        android:text="Large Text"
        android:layout_margin="10dp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.18" >

        <TextView
        android:id="@+id/textView_creator"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.21"
        android:text="CreatorID:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView_creatorID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView_creator"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.18" >

        <TextView
        android:id="@+id/textView_time"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.21"
        android:text="Create Time:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView_createTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/textView_time"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>
    
    <ImageButton
        android:id="@+id/editReportView"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.66"
         android:layout_margin="6dp"
        android:src="@drawable/object_stamp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.69" >

        <Button
            android:id="@+id/saveReportButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/bindLocationButton"
            android:background="@drawable/blue_button"
            android:text="Save Report" />

        <Button
            android:id="@+id/BindQR"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="114dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/bindLocationButton"
            android:layout_alignBottom="@+id/bindLocationButton"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/bindLocationButton"
            android:background="@drawable/blue_button"
            android:text="Bind QR" />

        <Button
            android:id="@+id/bindLocationButton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/blue_button"
            android:text="Bind Location" />

        <Button
            android:id="@+id/DeleteButton"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/BindQR"
            android:layout_alignParentTop="true"
            android:background="@drawable/blue_button"
            android:text="Delete Report" />

    </RelativeLayout>
    

</LinearLayout>